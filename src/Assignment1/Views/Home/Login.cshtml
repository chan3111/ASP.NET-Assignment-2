@model Assignment2.Models.User

@{
    Layout = "_Layout";
    ViewData["Title"] = "Login";
}


    <div class="row">
        <div class="col-xs-5">
            <div class="panel panel-border-color">
                <div class="panel-heading">
                    <h2>Login</h2>
                </div>
                <div class="panel-body">
                    <form asp-controller="Home" asp-action="LoginAction">
                        <table>
                            <tbody>
                                <tr>
                                    <td><label for="EmailAddress">Email Address:</label></td>
                                </tr>
                                <tr>
                                    <td><input type="email" name="EmailAddress" asp-for="EmailAddress" /></td>
                                </tr>
                                <tr>
                                    <td><label for="Password">Password:</label></td>
                                </tr>
                                <tr>
                                    <td><input type="password" name="Password" asp-for="Password" /></td>
                                </tr>
                                <tr>
                                    <td><input class="btn" type="submit" value="Login" /></td>
                                </tr>
                            </tbody>
                        </table>
                    </form>
                </div>
            </div>
        </div>
    </div>
